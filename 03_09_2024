check if perfect square
        int n = 9;
        boolean perfectSq = false;
        for(int i = 0; i<=n/2; i++){
            if(i*i == n){
                perfectSq = true;
            }
        }
        if(perfectSq == true) System.out.println("perfect square");
        else if(perfectSq == false) System.out.println("not perfect square");

