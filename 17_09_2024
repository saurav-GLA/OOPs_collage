        for(int i = 1; i<=4; i++){
            for(int j = 1; j<=7; j++){
                if(j<=(4-i) || j>=(4+i)){
                    System.out.print("  ");
                }else{
                    System.out.print("* ");
                }
            }System.out.println();
        }

      *       
    * * *     
